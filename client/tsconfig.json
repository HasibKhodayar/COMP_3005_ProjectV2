{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"], 
      "images/*": ["src/pics/*"]  
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
   "src/pics", 
   "src/custom.d.ts"

  ],
  "exclude": [
    "node_modules"
  ]
}
